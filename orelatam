// Minimal latam distribution 
// 
// ┌─────┐
// │ 2 4 │   2 = Shift,  4 = Level3 + Shift
// │ 1 3 │   1 = Normal, 3 = Level3
// └─────┘
// ┌─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┲━━━━━━━━━┓
// │ °   │ !   │ "   │ #   │ $   │ %   │ &   │ /   │ (   │ )   │ =   │ ?   │ ¡   ┃ ⌫ Back- ┃
// │ | ¬ │ 1   │ 2   │ 3   │ 4   │ 5   │ 6   │ 7   │ 8   │ 9   │ 0   │ ' \ │ ¿   ┃  space  ┃
// ┢━━━━━┷━┱───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┺━┳━━━━━━━┫
// ┃       ┃ Q   │ W   │ E   │ R   │ T   │ Y   │ U   │ I   │ O   │ P   │ ¨   │ *   ┃ Enter ┃
// ┃Tab ↹  ┃ q @ │ w   │ e   │ r   │ t   │ y   │ u   │ i   │ o   │ p   │ ´   │ + ~ ┃   ⏎   ┃
// ┣━━━━━━━┻┱────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┺┓      ┃
// ┃        ┃ A   │ S   │ D   │ F   │ G   │ H   │ J   │ K   │ L   │ Ñ   │ [   │ ]   ┃      ┃
// ┃Caps ⇬  ┃ a   │ s   │ d   │ f   │ g   │ h   │ j   │ k   │ l   │ ñ   │ { ^ │ } ` ┃      ┃
// ┣━━━━━━━┳┹────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┲┷━━━━━┻━━━━━━┫
// ┃       ┃ >   │ Z   │ X   │ C   │ V   │ B   │ N   │ M   │ ;   │ :   │ _   ┃             ┃
// ┃Shift ⇧┃ <   │ z   │ x   │ c   │ v   │ b   │ n   │ m   │ ,   │ .   │ -   ┃Shift ⇧      ┃
// ┣━━━━━━━╋━━━━━┷━┳━━━┷━━━┳━┷━━━━━┷━━━━━┷━━━━━┷━━━━━┷━━━━━┷━━━┳━┷━━━━━╈━━━━━┻━┳━━━━━━━┳━━━┛
// ┃       ┃       ┃       ┃                                   ┃       ┃       ┃       ┃
// ┃Ctrl   ┃Meta   ┃Alt    ┃             Space                 ┃AltGr ⇮┃Menu   ┃Ctrl   ┃
// ┗━━━━━━━┻━━━━━━━┻━━━━━━━┻━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┻━━━━━━━┻━━━━━━━┻━━━━━━━┛

partial alphanumeric_keys
xkb_symbols "orebasic" {

    name[Group1]="My spanish (Latin American)";

    key <TLDE>	{ [       bar,     degree,      notsign,     NoSymbol ]	};
    key <AE01>	{ [         1,     exclam ]	};
    key <AE02>	{ [         2,   quotedbl ]	};
    key <AE03>	{ [         3, numbersign ]	};
    key <AE04>	{ [         4,     dollar ]	};
    key <AE05>	{ [         5,    percent ]	};
    key <AE06>	{ [         6,  ampersand ] };
    key <AE07>	{ [         7,      slash ]	};
    key <AE08>	{ [         8,  parenleft ]	};
    key <AE09>	{ [         9, parenright ]	};
    key <AE10>	{ [         0,      equal ]	};
    key <AE11>	{ [apostrophe,   question,    backslash,     NoSymbol ]	};
    key <AE12>	{ [questiondown, exclamdown,   NoSymbol,     NoSymbol ]	};

    key <AD01>	{ [         q,          Q,           at,     NoSymbol ]	};
    key <AD02>	{ [         w,          W ]	};
    key <AD03>	{ [         e,          E ]	};
    key <AD04>	{ [         r,          R ]	};
    key <AD05>	{ [         t,          T ]	};
    key <AD06>	{ [         y,          Y ]	};
    key <AD07>	{ [         u,          U ]	};
    key <AD08>	{ [         i,          I ]	};
    key <AD09>	{ [         o,          O ]	};
    key <AD10>	{ [         p,          P ]	};
    key <AD11>	{ [dead_acute, dead_diaeresis, NoSymbol,     NoSymbol ]	};
    key <AD12>	{ [      plus,   asterisk,   asciitilde,     NoSymbol ]	};

    key <AC01>	{ [         a,          A ]	};
    key <AC02>	{ [         s,          S ]	};
    key <AC03>	{ [         d,          D ]	};
    key <AC04>	{ [         f,          F ]	};
    key <AC05>	{ [         g,          G ]	};
    key <AC06>	{ [         h,          H ]	};
    key <AC07>	{ [         j,          J ]	};
    key <AC08>	{ [         k,          K ]	};
    key <AC09>	{ [         l,          L ]	};
    key <AC10>	{ [    ntilde,     Ntilde ] };
    key <AC11>	{ [ braceleft, bracketleft, dead_circumflex, NoSymbol ]	};
    key <BKSL>	{ [braceright, bracketright, dead_grave,     NoSymbol ]	};
    
    key <LSGT>	{ [      less,    greater ] };
    key <AB01>	{ [         z,          Z ]	};
    key <AB02>	{ [         x,          X ]	};
    key <AB03>	{ [         c,          C ]	};
    key <AB04>	{ [         v,          V ]	};
    key <AB05>	{ [         b,          B ]	};
    key <AB06>	{ [         n,          N ]	};
    key <AB07>	{ [         m,          M ]	};
    key <AB08>	{ [     comma,  semicolon ]	};
    key <AB09>	{ [    period,      colon ]	};
    key <AB10>	{ [     minus, underscore ]	};

    include "level3(ralt_switch)"
};

partial alphanumeric_keys
xkb_symbols "orenodeadkeys" {

    include "latam(orebasic)"

    name[Group1]="My spanish (Latin American, no dead keys)";

    key <AD11>	{ [     acute,  diaeresis,     NoSymbol,     NoSymbol ]	};
    key <BKSL>	{ [braceright, bracketright,      grave,     NoSymbol ]	};
};

partial alphanumeric_keys
xkb_symbols "oredeadtilde" {

    include "latam(orebasic)"

    name[Group1]="My spanish (Latin American, dead tilde)";

    key <AD12>	{ [      plus,   asterisk, dead_asciitilde,  NoSymbol ]	};
};

// Personal configuration
// 
// ┌─────┐
// │ 2 4 │   2 = Shift,  4 = Level3 + Shift
// │ 1 3 │   1 = Normal, 3 = Level3
// └─────┘
// ┌─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┲━━━━━━━━━┓
// │ °   │ !   │ "   │ #   │ $   │ %   │ &   │ /   │ (   │ )   │ =   │ ?   │ ¡   ┃ ⌫ Back- ┃
// │ | ¬ │ 1   │ 2   │ 3   │ 4   │ 5   │ 6   │ 7   │ 8   │ 9   │ 0   │ ' \ │ ¿   ┃  space  ┃
// ┢━━━━━┷━┱───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┺━┳━━━━━━━┫
// ┃       ┃ Q   │ W   │ E   │ R   │ T   │ Y   │ U   │ I   │ O   │ P   │ ¨   │ *   ┃ Enter ┃
// ┃Tab ↹  ┃ q @ │ w   │ e € │ r ® │ t   │ y ¥ │ u   │ i ↑ │ o   │ p   │ ´   │ + ~ ┃   ⏎   ┃
// ┣━━━━━━━┻┱────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┺┓      ┃
// ┃        ┃ A   │ S   │ D   │ F   │ G   │ H   │ J   │ K   │ L   │ Ñ   │ [ ^ │ ] ` ┃      ┃
// ┃Caps ⇬  ┃ a   │ s 😏│ d   │ f   │ g   │ h   │ j ← │ k ↓ │ l → │ ñ   │ { ^ │ } ` ┃      ┃
// ┣━━━━━━━┳┹────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┲┷━━━━━┻━━━━━━┫
// ┃       ┃ > » │ Z   │ X   │ C   │ V   │ B   │ N   │ M   │ ;   │ :   │ _   ┃             ┃
// ┃Shift ⇧┃ < « │ z   │ x   │ c © │ v   │ b   │ n   │ m   │ ,   │ .   │ -   ┃Shift ⇧      ┃
// ┣━━━━━━━╋━━━━━┷━┳━━━┷━━━┳━┷━━━━━┷━━━━━┷━━━━━┷━━━━━┷━━━━━┷━━━┳━┷━━━━━╈━━━━━┻━┳━━━━━━━┳━━━┛
// ┃       ┃       ┃       ┃                                   ┃       ┃       ┃       ┃
// ┃Ctrl   ┃Meta   ┃Alt    ┃             Space                 ┃AltGr ⇮┃Menu   ┃Ctrl   ┃
// ┗━━━━━━━┻━━━━━━━┻━━━━━━━┻━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┻━━━━━━━┻━━━━━━━┻━━━━━━━┛

partial alphanumeric_keys
xkb_symbols "personal" {

    include "latam(orebasic)"

    name[Group1]="My custom spanish (Latin American)";

    key <AD03>	{ [         e,          E,     EuroSign,     NoSymbol ]	};
    key <AD04>	{ [         r,          R,   registered,     NoSymbol ]	};
    key <AD06>	{ [         y,          Y,          yen,     NoSymbol ]	};
    key <AD08>  { [         i,          I,      uparrow,     NoSymbol ] };

    key <AC02>	{ [         s,          S,       U1F60F,     NoSymbol ]	};
    key <AC07>  { [         j,          J,    leftarrow,     NoSymbol ] };
    key <AC08>  { [         k,          K,    downarrow,     NoSymbol ] };
    key <AC09>  { [         l,          L,   rightarrow,     NoSymbol ] };
    key <AC11>	{ [ braceleft, bracketleft, asciicircum, dead_circumflex ]	};
    key <BKSL>	{ [braceright, bracketright,      grave,   dead_grave ]	};
    
    key <LSGT>	{ [      less,    greater, guillemotleft, guillemotright ]	};
    key <AB03>	{ [         c,          C,    copyright,     NoSymbol ]	};
};
